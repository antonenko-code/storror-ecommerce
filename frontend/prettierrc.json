{
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "react",
    "next",
    "<THIRD_PARTY_MODULES>",
    "^[./]",
    "@app/",
    "@components/",
    "@hooks/",
    "@constants/",
    "@interfaces/",
    "@enums/",
    "@types/",
    "@utils/",
    "@styles/",
    "@assets/",
    "@public/"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "trailingComma": "es5",
  "tabWidth": 2,
  "printWidth": 80,
  "proseWrap": "always",
  "semi": true,
  "singleQuote": true,
  "bracketSpacing": true,
  "arrowParens": "avoid"
}
